@model WebMwcClinica.Models.Especialidad

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar</h1>

<h4>Especialidad</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="EspId" />
            <div class="form-group">
                <label asp-for="EspDescripcion" class="control-label"></label>
                <input asp-for="EspDescripcion" class="form-control" />
                <span asp-validation-for="EspDescripcion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EspObservacion" class="control-label"></label>
                <input asp-for="EspObservacion" class="form-control" />
                <span asp-validation-for="EspObservacion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EspImag" class="control-label"></label>
                <input class="form-control" name="file" type="file" onchange="ShowPreview(this)" />
                <img id="impPrev" />
                <span asp-validation-for="EspImag" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<br />
<br />
<div>
    <a asp-action="Index">Regresar</a>
</div>

@section scripts
{
    <script>
        function ShowPreview(input) {
            if (input.files && input.files[0]) {
                var reader = new FileReader();
                reader.onload = function (e) {
                    $('#impPrev').attr('src', e.target.result);
                    $('#impPrev').attr('width', 400);
                    $('#impPrev').attr('height', 400);
                };
                reader.readAsDataURL(input.files[0]);
            }
        }
    </script>
}
