@model WebMwcClinica.Models.Persona

<h4>Persona</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PerNombre" class="control-label"></label>
                <input asp-for="PerNombre" class="form-control" />
                <span asp-validation-for="PerNombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PerApellido" class="control-label"></label>
                <input asp-for="PerApellido" class="form-control" />
                <span asp-validation-for="PerApellido" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PerDireccion" class="control-label"></label>
                <input asp-for="PerDireccion" class="form-control" />
                <span asp-validation-for="PerDireccion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PerCorreo" class="control-label"></label>
                <input asp-for="PerCorreo" class="form-control" />
                <span asp-validation-for="PerCorreo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PerTelefono" class="control-label"></label>
                <input asp-for="PerTelefono" class="form-control" />
                <span asp-validation-for="PerTelefono" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PerTiposangre" class="control-label"></label>
                <input asp-for="PerTiposangre" class="form-control" />
                <span asp-validation-for="PerTiposangre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PerGenero" class="control-label"></label>
                <input asp-for="PerGenero" class="form-control" />
                <span asp-validation-for="PerGenero" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PerCedula" class="control-label"></label>
                <input asp-for="PerCedula" class="form-control" />
                <span asp-validation-for="PerCedula" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PerFechaNacimiento" class="control-label"></label>
                <input asp-for="PerFechaNacimiento" class="form-control" />
                <span asp-validation-for="PerFechaNacimiento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PerPhoto" class="control-label"></label>
                <input class="form-control name="file type="file" onchange="ShowPreview(this)"/>
                <img ser="" id="impPrev"/>
                @* <input asp-for="PerPhoto" class="form-control" />*@
                <span asp-validation-for="PerPhoto" class="text-danger"></span>
            </div>
            <br />
            <br />
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Regresar Atras </a>
</div>

@section scripts
{
    <script>
        function ShowPreview(input) {
            if (input.files && input.files[0]) { // Corregido: "input.files", no "input.file"
                var ImageDir = new FileReader();
                ImageDir.onload = function (e) {
                    $('#impPrev').attr('src', e.target.result);
                    $('#impPrev').attr('width', 400);
                    $('#impPrev').attr('height', 400);
                };
                ImageDir.readAsDataURL(input.files[0]);
            }
        }
    </script>
}
