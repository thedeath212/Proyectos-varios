<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SQLite.Login">
    <ContentPage.Content>
        <StackLayout VerticalOptions="CenterAndExpand" Padding="20">
            <Label Text="Iniciar Sesión" FontSize="24" TextColor="#333" HorizontalOptions="Center" Margin="0,0,0,20"/>
            <Entry x:Name="emailEntry" Placeholder="Correo electrónico" Keyboard="Email" Margin="0,0,0,10"/>
            <Entry x:Name="ContraseñaEntry" Placeholder="Contraseña" IsPassword="True" Margin="0,0,0,10"/>
            <Button Text="Iniciar sesión" Clicked="OnLoginButtonClicked" BackgroundColor="#007AFF" TextColor="White" Margin="0,0,0,10"/>
            <Label Text="¿No tienes una cuenta?" TextColor="#666" HorizontalOptions="Center"/>
            <Button Text="Crear cuenta" Clicked="OnCreateAccountButtonClicked" BackgroundColor="Transparent" TextColor="#007AFF"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>